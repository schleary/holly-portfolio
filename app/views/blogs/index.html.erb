<% @blogs.each do |blog| %>
<div class="post">
  <h2><div class="blog-title"><%= blog.title %></div></h2>
  <div class="date"><%= blog.date.strftime("%A, %B %e, %Y") %></div><br>
  <div class="text"><%= simple_format(blog.content) %></div><br>
  <hr>
</div>
<% end %>

<script>

  $(document).ready(function() {

    $('.content-area').css('display', 'none');

    $('.content-area').fadeIn(500);


    $('.thing').click(function(event) {

      event.preventDefault();

      newLocation = this.href;

      $('.content-area').fadeOut(500, newpage);

    });

    function newpage() {
      window.location = newLocation;
    }
  });

</script>
